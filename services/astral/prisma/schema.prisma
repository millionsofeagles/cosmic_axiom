// /services/astral/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Token {
  id         String   @id @default(uuid())
  token      String   @unique
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  createdAt  DateTime @default(now())
  expiresAt  DateTime
  revokedAt  DateTime?
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String
  role         String
  passwordHash String
  tokens       Token[]
}


model Role {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  users       User[]
}
