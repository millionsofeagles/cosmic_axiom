generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum ReportStatus {
  DRAFT
  FINALIZED
  ARCHIVED
}

enum SectionType {
  FINDING
  CONNECTIVITY
  CUSTOM
}

enum Severity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

model Report {
  id           String          @id @default(uuid())
  engagementId String
  title        String
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  sections     Section[]
  findings     ReportFinding[]
  filename     String?

  executiveSummary   String? @db.Text
  methodology        String? @db.Text
  toolsAndTechniques String? @db.Text
  conclusion         String? @db.Text
}

model Section {
  id               String         @id @default(uuid())
  report           Report         @relation(fields: [reportId], references: [id])
  reportId         String
  type             SectionType
  position         Int
  title            String?
  content          String?        @db.Text

  reportFinding    ReportFinding? @relation(fields: [reportFindingId], references: [id])
  reportFindingId  String?

  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
}

model ReportFinding {
  id             String         @id @default(uuid())
  report         Report         @relation(fields: [reportId], references: [id])
  reportId       String
  sections       Section[]
  images         FindingImage[]  // 0 or more images associated with this finding

  title          String
  description    String         @db.Text
  recommendation String         @db.Text
  impact         String         @db.Text
  severity       Severity
  reference      String?
  tags           Json           @default("[]")
  affectedSystems Json          @default("[]")

  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}

model FindingImage {
  id               String         @id @default(uuid())
  reportFinding    ReportFinding  @relation(fields: [reportFindingId], references: [id])
  reportFindingId  String

  title            String
  caption          String
  imageUrl         String

  createdAt        DateTime       @default(now())
}

model DefaultReportTemplate {
  id                 String @id @default("singleton") // Force singleton
  executiveSummary   String @db.Text
  methodology        String @db.Text
  toolsAndTechniques String @db.Text
  conclusion         String @db.Text
}
