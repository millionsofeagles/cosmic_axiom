// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum ReportStatus {
  DRAFT
  FINALIZED
  ARCHIVED
}

enum SectionType {
  FINDING
  CONNECTIVITY
  CUSTOM
}

model Report {
  id                  String    @id @default(uuid())
  engagementId        String
  title               String
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  sections            Section[]
  filename            String?

  executiveSummary    String?   @db.VarChar(1000)
  methodology         String?   @db.VarChar(1000)
  toolsAndTechniques  String?   @db.VarChar(1000)
  conclusion          String?   @db.VarChar(1000)
}


model Section {
  id        String   @id @default(uuid())
  report    Report   @relation(fields: [reportId], references: [id])
  reportId  String
  type      String
  data      Json
  position  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([reportId, position])
}

model DefaultReportTemplate {
  id                 String   @id @default("singleton") // Force singleton
  executiveSummary   String   @db.VarChar(1000)
  methodology        String   @db.VarChar(1000)
  toolsAndTechniques String   @db.VarChar(1000)
  conclusion         String   @db.VarChar(1000)
}

